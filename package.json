{
  "name": "hondata-ai-tuning-assistant",
  "version": "1.0.0",
  "description": "A desktop application that uses a local AI to analyze Hondata S300 datalogs and provide tuning advice.",
  "main": "electron.js",
  "homepage": "./",
  "author": "YourName",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "esbuild index.tsx --bundle --outfile=dist/bundle.js --platform=browser --define:process.env.NODE_ENV='\"development\"'",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.20.2"
  },
  "build": {
    "appId": "com.example.hondataaituner",
    "productName": "HondataAITuningAssistant",
    "files": [
      "**/*",
      "!install.ps1",
      "!README.md",
      "dist/bundle.js"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
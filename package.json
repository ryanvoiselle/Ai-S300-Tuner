{
  "name": "hondata-ai-tuning-assistant",
  "version": "1.0.0",
  "description": "A desktop application that uses a local AI to analyze Hondata S300 datalogs and provide tuning advice.",
  "main": "electron.js",
  "homepage": "./",
  "author": "YourName",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.example.hondataaituner",
    "productName": "HondataAITuningAssistant",
    "files": [
      "**/*",
      "!install.ps1",
      "!README.md"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

{
  "name": "hondata-ai-tuning-assistant",
  "version": "1.0.0",
  "description": "A desktop application that uses a local AI to analyze Hondata S300 datalogs and provide tuning advice.",
  "main": "electron.js",
  "homepage": "./",
  "author": "YourName",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./dist/tailwind.css",
    "build:js": "esbuild index.tsx --bundle --outfile=dist/bundle.js --platform=browser --define:process.env.NODE_ENV='\"production\"'",
    "build": "npm run build:css && npm run build:js",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-dl": "^3.5.0",
    "node-llama-cpp": "^2.3.11",
    "papaparse": "^5.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.20.2",
    "tailwindcss": "^3.4.4"
  },
  "build": {
    "appId": "com.example.hondataaituner",
    "productName": "HondataAITuningAssistant",
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "index.html"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
